<form method="POST" action="/admin/products/update/<%= product.id %>" style="width: 70%; margin: auto;">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" value="<%= product.name %>" name="name" class="form-control" placeholder="product name">
  </div>
  <div class="mb-3">
    <label class="form-label">Price</label>
    <input type="number" value="<%= product.price %>"  name="price" class="form-control" placeholder="product price">
  </div>
  <div class="mb-3">
    <label class="form-label">Promotion Price</label>
    <input type="number" value="<%= product.promotion_price %>" name="promotion_price" class="form-control" placeholder="product promotion price">
  </div>
  <div class="mb-3">
    <label class="form-label">Image</label>
    <img style="width: 200px; display: block;" src="<%= product.image %>" />
    <input type="text"  name="image" class="form-control" placeholder="image">
  </div>
  <div class="mb-3">
    <label class="form-label">Loại sản phẩm</label>
    <select name="categoryId" class="form-control">
      <option value="">Danh sách loại sản phẩm</option>
      <% categories.forEach(function(cate){%>
        <option <%= cate.id == product.category.id ? 'selected' : '' %> value="<%= cate.id %>"><%= cate.name %></option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>