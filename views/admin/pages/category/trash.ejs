<div style="display: flex; margin: 10px 0; justify-content: space-between;">
    <a href="/admin/category/add"  class="btn btn-success">Add</a>
    <a href="/admin/category/"  class="btn btn-warning">List</a>
</div>
<div class="table-responsive">
    <table style="text-align: center;" class="table table-bordered" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(function(cate){ %>
            <tr>
                <td><%= cate.id %></td>
                <td><%= cate.name %></td>
                <td>
                    <img style="width: 100px; height: 100px;" src="/<%= cate.image %>" />
                </td>
                <td>
                    <a href="/admin/category/restore/<%= cate.id %>" type="button" class="btn btn-success"  onclick="return confirm('Bạn có chắc muốn khôi phục ?')">Restore</a>
                    <a href="/admin/category/delete/<%= cate.id %>" type="button" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa ?')">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>   
    </table>
    <%- paginate %>
</div>